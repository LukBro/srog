

<h1>Lista artykułów</h1>
 <%= link_to "Sign up now!", 'signs', class: "btn btn-secondary btn-block" %>
<%= link_to 'DODAJ ARTYKUŁ', new_article_path, class:"btn btn-secondary btn-block" %>
<p class="p.ostylp"><table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th> Trzecia kolumna</th>
    <th> Edit</th>
    <th> Delete</th>
  </tr>
</p>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class:"btn btn-primary" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class:"btn btn-primary" %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete, data:{confirm: 'Czy jesteś pewien'}, class:"btn btn-primary" %></td>
    </tr>
  <% end %>
</table>
